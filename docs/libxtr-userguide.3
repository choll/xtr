#include <fmt/ostream.h>

#include <ostream>

namespace
{
    struct custom {};

    std::ostream& operator<<(std::ostream& os, const custom&)
    {
        return os << "custom";
    }
}

int main()
{
    xtr::logger log;

    xtr::sink s = log.get_sink("Main");

    XTR_LOG(s, "Hello {}", custom());

    return 0;
}
